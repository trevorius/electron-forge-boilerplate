{
	"name": "electron_boilerplate",
	"version": "0.0.0",
	"description": "boilerplate react electron app. with shadcnUI and tailwind integrated. typscript, jest tested.",
	"main": "src/electron/main.js",
	"scripts": {
		"start": "electron-forge start",
		"dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
		"dev:vite": "vite",
		"dev:electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
		"build": "npm run build:vite",
		"build:vite": "vite build",
		"package": "electron-forge package",
		"make": "electron-forge make",
		"publish": "electron-forge publish",
		"preview": "vite preview",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"config": {
		"forge": {
			"packagerConfig": {
				"asar": true,
				"extraResource": [
					"dist-react"
				]
			},
			"makers": [
				{
					"name": "@electron-forge/maker-squirrel",
					"config": {
						"name": "electron_boilerplate"
					}
				},
				{
					"name": "@electron-forge/maker-zip",
					"platforms": [
						"darwin",
						"linux"
					]
				},
				{
					"name": "@electron-forge/maker-deb",
					"config": {
						"options": {
							"maintainer": "trev-z-dev",
							"homepage": "https://github.com/trev-z-dev/electron-boilerplate"
						}
					}
				},
				{
					"name": "@electron-forge/maker-rpm",
					"config": {
						"options": {
							"homepage": "https://github.com/trev-z-dev/electron-boilerplate"
						}
					}
				}
			]
		}
	},
	"keywords": [
		"electron",
		"boilerplate",
		"react",
		"shadcn",
		"tailwind"
	],
	"author": "trev-z-dev",
	"license": "MIT",
	"dependencies": {
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-slot": "^1.2.3",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"i18next": "^25.5.2",
		"i18next-browser-languagedetector": "^8.2.0",
		"lucide-react": "^0.544.0",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-i18next": "^16.0.0",
		"tailwind-merge": "^3.3.1"
	},
	"devDependencies": {
		"@electron-forge/cli": "^7.9.0",
		"@electron-forge/maker-deb": "^7.9.0",
		"@electron-forge/maker-rpm": "^7.9.0",
		"@electron-forge/maker-squirrel": "^7.9.0",
		"@electron-forge/maker-zip": "^7.9.0",
		"@tailwindcss/postcss": "^4.1.13",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.5.2",
		"@types/react": "^19.1.14",
		"@types/react-dom": "^19.1.9",
		"@vitejs/plugin-react": "^5.0.3",
		"autoprefixer": "^10.4.21",
		"concurrently": "^9.2.1",
		"cross-env": "^10.0.0",
		"electron": "^38.1.2",
		"jest": "^30.1.3",
		"jest-environment-jsdom": "^30.1.2",
		"postcss": "^8.5.6",
		"tailwindcss": "^4.1.13",
		"tailwindcss-animate": "^1.0.7",
		"ts-jest": "^29.4.4",
		"typescript": "^5.9.2",
		"vite": "^7.1.7",
		"wait-on": "^9.0.1"
	}
}
